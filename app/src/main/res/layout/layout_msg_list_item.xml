<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragChats_listItem_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/fragChats_listItem_image_headPortrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fragChats_listItem_image_msgCount"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/test_icon_normal"
        app:layout_constraintEnd_toEndOf="@+id/fragChats_listItem_image_headPortrait"
        app:layout_constraintTop_toTopOf="@+id/fragChats_listItem_image_headPortrait" />

    <TextView
        android:id="@+id/fragChats_listItem_text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="群组名称"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/fragChats_listItem_text_time"
        app:layout_constraintStart_toEndOf="@+id/fragChats_listItem_image_headPortrait"
        app:layout_constraintTop_toTopOf="@+id/fragChats_listItem_image_headPortrait" />

    <TextView
        android:id="@+id/fragChats_listItem_text_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="xx:12345"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/fragChats_listItem_image_headPortrait"
        app:layout_constraintEnd_toStartOf="@+id/fragChats_listItem_iamge_action"
        app:layout_constraintStart_toEndOf="@+id/fragChats_listItem_image_headPortrait" />

    <TextView
        android:id="@+id/fragChats_listItem_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="2.44 PM"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragChats_listItem_image_headPortrait" />

    <ImageView
        android:id="@+id/fragChats_listItem_iamge_action"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/test_icon_selected"
        app:layout_constraintBottom_toBottomOf="@+id/fragChats_listItem_image_headPortrait"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="2px"
        android:background="#D522A2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragChats_listItem_image_headPortrait" />

</android.support.constraint.ConstraintLayout>