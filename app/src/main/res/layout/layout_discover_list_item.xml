<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragDiscover_layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fragDiscover_text_empty"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="#00000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fragDiscover_iamge_portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/fragDiscover_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="TextViewadDF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/fragDiscover_iamge_portrait"
        app:layout_constraintStart_toEndOf="@+id/fragDiscover_iamge_portrait"
        app:layout_constraintTop_toTopOf="@+id/fragDiscover_iamge_portrait" />

    <ImageView
        android:id="@+id/fragDiscover_image_right"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragDiscover_iamge_portrait"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragDiscover_iamge_portrait"
        app:srcCompat="@drawable/test_icon_right" />

    <ImageView
        android:id="@+id/fragDiscover_image_NewComment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragDiscover_iamge_portrait"
        app:layout_constraintEnd_toStartOf="@+id/fragDiscover_image_right"
        app:layout_constraintTop_toTopOf="@+id/fragDiscover_iamge_portrait"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/fragDiscover_image_mark"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="43dp"
        android:layout_marginBottom="43dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragDiscover_image_NewComment"
        app:layout_constraintLeft_toLeftOf="@+id/fragDiscover_image_NewComment"
        app:srcCompat="@drawable/ic_notification_overlay" />

</android.support.constraint.ConstraintLayout>